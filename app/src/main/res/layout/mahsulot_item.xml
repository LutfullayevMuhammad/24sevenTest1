<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/mahsulot_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mahsulot_name"
        android:id="@+id/mahsulot_hajmi"
        android:textStyle="bold"
        android:textSize="17sp"
        tools:text="5.0 x 17 000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/mahsulot_hajmi"
        app:layout_constraintStart_toEndOf="@id/mahsulot_hajmi"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/mahsulot_hajmi"
        app:layout_constraintEnd_toStartOf="@id/mahsulot_narxi"
        android:layout_marginHorizontal="10dp"
        android:maxLines="1"
        android:text="............................................................................................................................................................................................................"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mahsulot_narxi"
        app:layout_constraintTop_toTopOf="@id/mahsulot_hajmi"
        app:layout_constraintBottom_toBottomOf="@id/mahsulot_hajmi"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="85 000 сум"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>